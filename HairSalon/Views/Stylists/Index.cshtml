@using HairSalon.Models;
@model List<HairSalon.Models.Stylist>;

@if (@Model.Count == 0)
{
  <h3>No Stylists have been added yet!</h3>
  <p>@Html.ActionLink("Add new Stylist", "Create")</p>
} 

<h2>Here are all hair stylists currently employed at your salon:</h2>
@foreach (Stylist stylist in Model)
{
  <p>@Html.ActionLink($"{stylist.Name}", "Show", new { id = stylist.StylistId })</p>
}

<p>@Html.ActionLink("Add new Category", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>