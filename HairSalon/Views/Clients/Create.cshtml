@model HairSalon.Models.Client

<h4>Add New Client</h4>
@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name)<br>

    @Html.LabelFor(model => model.Notes)
    @Html.TextBoxFor(model => model.Notes)<br>

    @Html.LabelFor(model => model.StylistId)
    @Html.DropDownList("StylistId")
    <input type="submit" value="Add client"/>
}
<p>@Html.ActionLink("Show all Stylists", "Index", "Stylists")</p>
